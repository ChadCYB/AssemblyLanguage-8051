CONV:	MOV	R1,#30H	;指向計數值儲存位址
	MOV	A,B	
	ANL	A,#0F0H			;取出十位數計數值
	SWAP	A
	MOV	@R1,A
	INC	R1				;下一位址
	MOV	A,B
	ANL	A,#0FH			;取出個位數計數值
	MOV	@R1,A
	RET
TABLE:	DB	11000000B	;顯示碼0
	DB	11111001B		;顯示碼1
	DB	10100100B		;顯示碼2
	DB	10110000B		;顯示碼3
	DB	10011001B		;顯示碼4
	DB	10010010B		;顯示碼5
	DB	10000010B		;顯示碼6
	DB	11111000B		;顯示碼7
	DB	10000000B		;顯示碼8
	DB	10010000B		;顯示碼9
	END
